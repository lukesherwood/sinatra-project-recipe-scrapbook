<h1>This is your recipe</h1>

<h2><%= @recipe.name.titleize %> </h2>

<h3> By: <%= @recipe.USER.username %> </h3>

<p><%= @recipe.ingredients %> </p>

<p><%= @recipe.method %> </p>

<form action="/recipes/<%= @recipe.id %>/delete">
         <button type="submit">Delete Recipe</button>
</form>
<form action="/recipes/<%= @recipe.id %>/edit">
         <button type="submit">Edit Recipe</button>
</form>