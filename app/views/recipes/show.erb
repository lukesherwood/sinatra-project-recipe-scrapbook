<h2><%= @recipe.name %> </h2>
<h3> By: <%= @recipe.USER.username %></h3>


<h3> Ingredients:  </h3>
<ul>
    <% @recipe.ingredients.split("\n").each do |ingredient| %> 
        <li><%= ingredient %></li>
    <% end%>
</p>
<h3> Method:  </h3>
<ul>
    <% @recipe.method.split("\n").each do |step| %> 
        <li><%= step %></li>
    <% end%> 
</ul>
<br>
<% if @recipe.USER_id == current_user.id %>
    <form action="/recipes/<%= @recipe.id %>/delete">
        <button type="submit">Delete Recipe</button>
    </form>
    <form action="/recipes/<%= @recipe.id %>/edit">
        <button type="submit">Edit Recipe</button>
    </form>
<% end%>
    